@using SmartCode
@using SmartCode.Generator.Entity
@using static SmartCode.Generator.RazorTemplates.Contributions.AppFx.Common
@inherits SmartCode.TemplateEngine.Impl.RazorCoreTemplate<SmartCode.BuildContext>
@{
    var project = Model.Project;
    var build = Model.Build;
    var table = Model.GetCurrentTable();
}
<form class="card detail" *ngIf="(account.info | async) as info" #detailForm="ngForm">
  <div class="card-header d-flex justify-content-between align-content-center">
    <h5 class="card-title mb-0">{{title}}</h5>
    <div class="btn-group btn-group-sm">
      <button *ngIf="info.privileges['@(table.Name).update'] && editable"
        type="button" class="btn btn-sm btn-outline-primary"
        (click)="save()" [disabled]="!detailForm.valid">
        <svg-icon iconPath="bi/check"></svg-icon> 保存
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary"
        (click)="cancel()">
        <svg-icon iconPath="bi/x"></svg-icon> 取消
      </button>
    </div>
  </div>
  <div class="card-body">
@foreach (var col in table.Columns) {
    if (col.LanguageType == "boolean") {
    <div class="mb-3">
      <div class="form-check form-switch">
        <input type="checkbox" class="form-check-input"
          id="@(col.ConvertedName)" name="@(col.ConvertedName)"
          [(ngModel)]="model.@(col.ConvertedName)" [disabled]="!editable">
        <label class="form-check-label text-muted"
          for="@(col.ConvertedName)">
          @col.GetSummary()
        </label>
      </div>
    </div>
    }
    else {
    <div class="mb-3">
      <label class="form-label text-muted" for="@(col.ConvertedName)">@col.GetSummary() @if (!col.IsNullable) { <i class="text-danger">*</i> }</label>
      @if (col.IsNullable) {
      <input class="form-control" type="text" id="@(col.ConvertedName)" name="@(col.ConvertedName)"
        placeholder="请输入@(col.GetSummary()) ..."
        [(ngModel)]="model.@(col.ConvertedName)" [disabled]="!editable"
      />
      } else {
      <input class="form-control" type="text" id="@(col.ConvertedName)" name="@(col.ConvertedName)"
        placeholder="请输入@(col.GetSummary()) ..." required
        [disabled]="!editable"
        [(ngModel)]="model.@(col.ConvertedName)"
        @($"#{col.ConvertedName}")="ngModel"
        [class.is-invalid]="!(@(col.ConvertedName).valid || @(col.ConvertedName).pristine)"
        [class.is-valid]="@(col.ConvertedName).valid"
      />
      }
    </div>
    }
}
  </div>
  <div *ngIf="info.privileges['@(table.Name).update'] && editable"
    class="card-footer d-flex justify-content-between">
    <button type="button" class="btn btn-sm btn-outline-primary"
      (click)="save()" [disabled]="!detailForm.valid">
      <svg-icon iconPath="bi/check"></svg-icon> 保存
    </button>
    <button type="button" class="btn btn-sm btn-outline-secondary"
      (click)="cancel()">
      <svg-icon iconPath="bi/x"></svg-icon> 取消
    </button>
  </div>
</form>
