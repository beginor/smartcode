@using SmartCode
@using SmartCode.Generator.Entity
@using static SmartCode.Generator.RazorTemplates.Contributions.AppFx.Common
@inherits SmartCode.TemplateEngine.Impl.RazorCoreTemplate<SmartCode.BuildContext>
@{
    var project = Model.Project;
    var build = Model.Build;
    var table = Model.GetCurrentTable();
}
:host {
  display: block;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
  overflow-y: auto;
  background-color: var(--bs-light);

  ngb-pagination ::ng-deep ul.pagination {
    margin-bottom: 0 !important;
  }

  .detail-container {
    position: absolute;
    top: var(--navbar-height);
    right: 0;
    height: calc(100vh - var(--navbar-height));
    bottom: 0;
    z-index: var(--detail-zIndex);
  }

}
