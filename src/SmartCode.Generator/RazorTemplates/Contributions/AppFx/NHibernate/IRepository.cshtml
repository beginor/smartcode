@using SmartCode
@using SmartCode.Generator.Entity
@using static SmartCode.Generator.RazorTemplates.Contributions.Common;
@model BuildContext
@{
    var project = Model.Project;
    var buildTask = Model.Build;
    var table = Model.GetCurrentTable();
    var pkCols = table.Columns.Where(col => col.IsPrimaryKey).ToArray();
    var firstPk = pkCols.First();
}
using System.Threading.Tasks;
using Beginor.AppFx.Core;
using @(project.Author).@(project.Module).Models;

namespace @(project.Author).@(project.Module).@(buildTask.Module).Repositories {

    /// <summary>@table.GetSummary() 仓储接口</summary>
    public partial interface I@(table.ConvertedName)Repository : IRepository<@(table.ConvertedName)Model, @(ConvertCsType(firstPk))> {

        /// <summary>搜索 @table.GetSummary() ，返回分页结果。</summary>
        Task<PaginatedResponseModel<@(table.ConvertedName)Model>> SearchAsync(
            @(table.ConvertedName)SearchModel model
        );

    }

}
